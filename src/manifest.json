{
    "manifest_version": 2,
    "name": "network monitor without devtools",
    "version": "0.0.19",

    "browser_specific_settings": {
	"gecko": {
	    "strict_min_version": "120.0"
	}
    },

    "description": "monitor the network without web devtools.",


    "icons": {
	"48": "images/icon.png"
    },

    "browser_action": {
	"default_icon": {
	    "48": "images/icon.png"
	},
	"default_title": "network monitor without devtools"
    },

    "options_ui": {
	"page": "usage.html",
	"browser_style": true
    },

    "background": {
	"scripts": [ "background.js"],
	"type": "module"
    },

    "permissions": [
	"storage",
	"unlimitedStorage",
	"notifications",
	"activeTab",
	"tabs",
	"scripting",
	"downloads",

	"webRequest",
	"webRequestBlocking",
	"webRequestFilterResponse",
	"*://*/"
    ]
    
}
